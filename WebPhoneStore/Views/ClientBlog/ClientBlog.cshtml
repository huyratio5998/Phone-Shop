
@{
    ViewBag.Title = "ClientBlog";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    var lstBlog = (List<WebPhoneStore.Models.Content>)ViewBag.lstBlog;
    var lstCategory = (List<WebPhoneStore.Models.CategoryProduct>)ViewBag.lstCategoryTop;
    var lstHotProduct = (List<WebPhoneStore.Models.Product>)ViewBag.lstHotProduct;
    var lstTags = (List<WebPhoneStore.Models.Tag>)ViewBag.lstTags;
}
<section class="bgwhite p-t-60">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-9 p-b-75">
                <div class="p-r-50 p-r-0-lg">
                    @foreach (var item in lstBlog)
                    {
                        <!-- item blog -->
                        <div class="item-blog p-b-80">
                            <a href="@Url.Action("ClientBlogDetail","ClientBlog",new { ID=item.ID})" class="item-blog-img pos-relative dis-block hov-img-zoom">
                                <img src="/Content/Images/@item.Image" alt="IMG-BLOG">

                                <span class="item-blog-date dis-block flex-c-m pos1 size17 bg4 s-text1">
                                    @item.CreateDate
                                </span>
                            </a>

                            <div class="item-blog-txt p-t-33">
                                <h4 class="p-b-11">
                                    <a href="@Url.Action("ClientBlogDetail","ClientBlog",new { ID=item.ID})" class="m-text24">
                                        @item.Name
                                    </a>
                                </h4>

                                <div class="s-text8 flex-w flex-m p-b-21">
                                    <span>
                                        @item.CreateBy
                                        <span class="m-l-3 m-r-6">|</span>
                                    </span>

                                    <span>
                                        @item.MetaKeyword
                                        <span class="m-l-3 m-r-6">|</span>
                                    </span>

                                    <span>
                                        @item.Name
                                    </span>
                                </div>

                                <p class="p-b-12">
                                    @item.Description 
                                </p>

                                <a href="@Url.Action("ClientBlogDetail","ClientBlog",new { ID=item.ID})" class="s-text20">
                                    Đọc tiếp
                                    <i class="fa fa-long-arrow-right m-l-8" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    }

                </div>

                <!-- Pagination -->
                <div class="pagination flex-m flex-w p-r-50">
                    <a href="#" class="item-pagination flex-c-m trans-0-4 active-pagination">1</a>
                        <a href="#" class="item-pagination flex-c-m trans-0-4">2</a>                    
                </div>
            </div>

            <div class="col-md-4 col-lg-3 p-b-75">
                <div class="rightbar">
                    @using (Html.BeginForm("ClientBlog", "ClientBlog", FormMethod.Get))
                    {
                        <!-- Search -->
                        <div class="pos-relative bo11 of-hidden">
                            <input class="s-text7 size16 p-l-23 p-r-50" type="text" name="search" placeholder="Tìm kiếm">

                            <button type="submit" class="flex-c-m size5 ab-r-m color1 color0-hov trans-0-4">
                                <i class="fs-13 fa fa-search" aria-hidden="true"></i>
                            </button>
                        </div>
                    }


                    <!-- Categories -->
                    <h4 class="m-text23 p-t-56 p-b-34">
                        Hãng điện thoại
                    </h4>
                    <ul>
                        @foreach (var item in lstCategory)
                        {
                            <li class="p-t-6 p-b-8 bo7">
                                <a href="@Url.Action("Index","ClientProduct",new { CID=item.ID })" class="s-text13 p-t-5 p-b-5">
                                    @item.Name
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Featured Products -->
                    <h4 class="m-text23 p-t-65 p-b-34">
                        Sản phẩm hot
                    </h4>

                    <ul class="bgwhite">
                        @foreach (var item in lstHotProduct)
                        {
                            <li class="flex-w p-b-20">
                                <a href="@Url.Action("Details","ClientProduct",new { ID=item.ID})" class="dis-block wrap-pic-w w-size22 m-r-20 trans-0-4 hov4">
                                    <img src="~/Content/Images/@item.Image" alt="IMG-PRODUCT">
                                </a>

                                <div class="w-size23 p-t-5">
                                    <a href="@Url.Action("Details","ClientProduct",new { ID=item.ID})" class="s-text20">
                                        @item.Name
                                    </a>

                                    <span class="dis-block s-text17 p-t-6">
                                        @(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")
                                    </span>
                                </div>
                            </li>
                        }
                    </ul>

                    <!-- Archive -->
                    <!-- Tags -->
                    <h4 class="m-text23 p-t-50 p-b-25">
                        Thẻ tag
                    </h4>

                    <div class="wrap-tags flex-w">
                        @foreach (var item in lstTags)
                        {
                            <a href="abc" class="tag-item">
                                @item.Name
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

