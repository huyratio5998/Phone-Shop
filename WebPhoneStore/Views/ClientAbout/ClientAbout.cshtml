
@{
    ViewBag.Title = "ClientAbout";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    var about = (WebPhoneStore.Models.About)ViewBag.About;
}

<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url('/../../Client/images/1920_239.jpg');">
    <h2 class="l-text2 t-center">
        Cửa Hàng
    </h2>
</section>

<!-- content page -->
<section class="bgwhite p-t-66 p-b-38">
    <div class="container">
        <div class="row">
            <div class="col-md-4 p-b-30">
                <div class="hov-img-zoom">
                    <img src="/Content/Images/@about.Image" alt="IMG-ABOUT">
                </div>
            </div>

            <div class="col-md-8 p-b-30">
                <h3 class="m-text26 p-t-15 p-b-16">
                    @about.Name
                </h3>

                <p class="p-b-28">
                    @Html.Raw(about.Detail)                       
                </p>

                <div class="bo13 p-l-29 m-l-9 p-b-10">
                    <p class="p-b-11">
                        @about.Description
                    </p>

                    <span class="s-text7">
                        @about.CreateBy
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>


